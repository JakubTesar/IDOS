@using IDOS.ViewModels
@model List<Line>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Index</title>
</head>
<body class="bg-dark text-white">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white mb-5">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Lines" asp-action="Index" class="nav-link">Lines</a>
            </li>
        </ul>
         <form asp-controller="Lines" asp-action="Index" class="form-inline my-2 my-lg-0 d-flex justify-content-end">
                            @using (Html.BeginForm())
                                    {
                                        <div>
                                            Find by name: @Html.TextBox("Name")  
                                            <input class="btn btn-outline-success my-2 my-sm-0 " type="submit" value="Search"/></div>
                                    }</form>
    </div>
</nav>
<h1 class="m-2">Welcome to IDOS (FUCK)</h1>
<div class="m-5">
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">ID</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            foreach (Line line in Model)
            {
                <tr>
                    <td>@line.Name</td>
                    <td>@line.Type</td>
                    <td>@line.ID</td>
                    <td><a asp-controller="Line" asp-action="Index" asp-route-ID="@line.ID" class="btn btn-info">Detail</a><td/>
                </tr>
            }
                
        }
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a asp-controller="Lines" asp-action="Index" asp-route-page="@((int)ViewData["page"]-1)" class="page-link">Previous</a>
                </li>
                <li class="page-item">
                    <a asp-controller="Lines" asp-action="Index" asp-route-page="@((int)ViewData["page"]+1)" class="page-link">Next</a>
                </li>
            </ul>
        </nav>
</div>

</body>
</html>